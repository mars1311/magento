<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header-wrapper">
            <container name="metador.navbar.container" as="metador-navbar-container" htmlTag="div" htmlClass="metador-navbar-container" after ="header-wrapper">
                <block class='Magento\Customer\Block\Account\AuthorizationLink' name="metador.navbar.account" as="company_module" template="Magento_Theme::navbar.phtml"/>
            </container>
        </referenceContainer>

        <move element="top.search" destination="header-wrapper" after ="metador.navbar.container"/>
        <move element="top.links" destination="header-wrapper" after = "metador.navbar.container" />
        <move element="minicart" destination="header-wrapper" after="metador.navbar.container"/>

        <referenceBlock name="top.links">
            <referenceBlock name="wish-list-link" remove="true" />
        </referenceBlock>
    </body>
</page>
